<div class="card-show">
  <%= cl_image_tag @event.photos.first.key unless @event.photos.empty? %>
  <%= image_tag('sportnerhome.svg') if @event.photos.empty? %>
  <div class="card-show-infos">
    <div>
      <h2><%= @event.name %></h2>
    </div>
    <div class="card-show-elements">
      <p>
      <i class="fa-solid fa-person-running"></i> <%= @event.run_detail.pace %>/km
      </p>
      <p>
      <i class="fa-solid fa-arrows-left-right"></i> <%= @event.run_detail.distance %> km
      </p>
      <p>
      <i class="fa-solid fa-users"></i> <%= @event.participations.count %>/<%= @event.max_people %>
      </p>
      <p>
      <% if @event.run_detail.duration < 60 %>
        <i class="fa-regular fa-hourglass-half"></i> <%= @event.run_detail.duration %> min
      <% else %>
        <i class="fa-regular fa-hourglass-half"></i> <%= @event.run_detail.duration / 60 %>h<%= @event.run_detail.duration % 60 %>
      <% end %>
      </p>
    </div>
    <div class="card-show-elements">
      <p>
      <i class="fa-solid fa-clock"></i></i> <%= @event.date.hour %>h<%= @event.date.min %>
      </p>
      <p>
      <i class="fa-solid fa-calendar-check"></i></i> <%= @event.date.day %>/<%= @event.date.month %>/<%= @event.date.year %>
      </p>
    </div>
    <div class="card-show-elements">
      <p>
      <% if current_user %>
        <i class="fa-solid fa-location-pin"></i> <%= @event.meeting_point %>
      <% else %>
        Connectez-vous pour voir l'adresse
      <% end %>
      </p>
    </div>
    <div class="card-show-user">
    <p>Par <b><%= @event.organizer.first_name %></b> </p>
    <%= cl_image_tag @event.organizer.avatar.key, class: "avatar-bordered" %>
    </div>
  </div>
</div>
<div class="card-desc">
  <h2>Description</h2>
  <p><%= @event.description %></p>
</div>
