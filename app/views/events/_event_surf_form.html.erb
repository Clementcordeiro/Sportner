<div class="container event-surf-form">
  <%= simple_form_for @event, method: :post, data: { controller: "flatpickr preview-input"} do |f| %>
    <%= f.hidden_field :event_type, value: "surf" %>
    <%= f.input :name, label: "Nom de ton event" %>
    <%= f.input :date, label: "Date de l'event", as: :string, input_html: { data: { flatpickr_target: "Date" }} %>
    <%= f.input :description, label: "Dis-nous tout sur ton event" %>
    <%= f.input :max_people, label: "Nbre max de participants" %>
    <div class="row">
      <div class="col">
        <%= f.input :car_pooling %>
      </div>
      <div class="col">
        <%= f.input :passengers %>
      </div>
    </div>
    <%= f.association :spot, collection: Spot.order(:location), label_method: :location, prompt: "Choisi ton spot" %>
    <%= f.input :difficulty, collection: Event::DIFFICULTIES %>
    <%= f.input :meeting_point, label: "Point de RDV", placeholder: "adresse,XXXX Ville" %>

    <div class="mt-3">
        <p>Ajoutez des photos</p>
    </div>
    <div class="d-flex">
      <div>
        <%= image_tag("icone-photo.jpg", :width=>90, :height=>90, class:"event_photo m-2", data:{"preview-input-target": :image, action: "click->preview-input#openFile"})%>
      </div>
      <%= f.input :photos, as: :file,
                  required: false,
                  autofocus: true,
                  input_html: {multiple: true, data: {"preview-input-target": :input, action: "change->preview-input#changeImage"},class:"d-none"},
                  label: false %>

  </div>
    <%= f.submit "Allons surfer", class: "btn btn-fullwide" %>
  <% end %>
</div>
