<div class="container">
  <%= simple_form_for @event, data: { controller: 'flatpickr' } do |f| %>
    <%= f.hidden_field :event_type, value: "surf" %>
    <%= f.input :name, label: "Nom de ton event" %>
    <%= f.input :date, label: "Date de l'event", as: :string, input_html: { data: { flatpickr_target: "Date" }} %>
    <%= f.input :description, label: "Dis-nous tout sur ton event" %>
    <%= f.input :max_people, label: "Nbre max de participants" %>
    <div class="row">
      <div class="col">
        <%= f.input :car_pooling %>
      </div>
      <div class="col">
        <%= f.input :passengers %>
      </div>
    </div>
    <%= f.association :spot, collection: Spot.order(:location), label_method: :location, prompt: "Choisi ton spot" %>
    <%= f.input :difficulty, collection: Event::DIFFICULTIES %>
</div>
    <%= f.submit "Publie l'event", class: "btn btn-fullwide" %>
  <% end %>
