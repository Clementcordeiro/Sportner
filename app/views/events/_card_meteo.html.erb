<div id="meteo-title">
  <h2>Meteo</h2>
</div>
<div class="card-meteo">
  <div class="info-adresse">
    <i class="fa-solid fa-circle-half-stroke"></i>
    <% if @event.event_type == "running" %>
      <%= @event.run_detail.location %>
    <% else %>
      <%= @event.spot.location %>
    <% end %>
  </div>
  <% if ((@event.date - Time.now) / (60 * 60 * 24)).round < 15 %>
    <div class="info-meteo">
      <div class="info-temps">
        <%= image_tag @weathericonurl %>
        <%= @lang_fr %>
      </div>
      <div class="info-temperature">
        <i class="fa-solid fa-temperature-half"></i>
        <%= @temp_c %>°C
      </div>
      <div class="info-vent">
        <i class="fa-solid fa-location-arrow" style="rotate: <%= @winddirdegree.to_i + 315 %>deg"></i>
        <%= @windspeedkmph %>km/h
        <%= @winddir16point %>
      </div>
    <% else %>
    <div class="info-meteo">
      <h5>Pas de données météo pour les évenements à plus de 15 jours !</h5>
    </div>
    <% end %>
  </div>
</div>
