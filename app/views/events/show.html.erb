<div class="card-show">
  <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
  <div class="card-show-infos">
    <div>
      <h2><%= @event.name %></h2>
    </div>
    <div>
      <p>
      <i class="fa-solid fa-users"></i> <%= @event.max_people %>
      <i class="fa-solid fa-arrows-left-right"></i> <%= @event.run_detail.distance %>
      <i class="fa-solid fa-person-running"></i> <%= @event.run_detail.pace %> /km
      </p>
      <p>
      </p>
    </div>
    <div class="card-show-user">
    <p><b>By</b> <%= @event.organizer.first_name %> </p>
    <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="avatar-bordered" />
    </div>
  </div>
</div>
<p><%= @event.description %></p>
