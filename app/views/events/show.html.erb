<div>
  <% if @event.event_type == "running" %>
    <%= render "show_run" %>
  <% else %>
    <%= render "show_surf" %>
  <% end %>
  <%= render "card_meteo" %>
  <% if @event.participants.include?(current_user) %>
  <% else %>
    <%= link_to "Participer", event_participations_path(@event.id), data: { turbo_method: :post } ,class: "btn-fullwide btn-bottom-50" %>
  <% end %>

  <% @event.photos.each do |photo| %>
    <%= cl_image_tag photo.key, height: 200, width: 280, crop: :fill %>
  <%end%>

</div>
