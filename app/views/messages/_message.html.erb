<div class="my-2 d-flex flex-column <%= 'align-items-end' if message.sender?(current_user) %>" id="message-<%= message.id %>">
 <div class="message mb-1">
    <% if message.sender?(current_user) %>
      <p class="pe-1"><%= message.user.first_name %></strong>
      <%= cl_image_tag message.user.avatar.key, class: "avatar-chat" %>
    <% else %>
      <%= cl_image_tag message.user.avatar.key, class: "avatar-chat" %>
      <p class="ps-1"><%= message.user.first_name %></strong>
    <% end %>
    </div>
    <div class="message-content mt-1">
      <p><%= message.content %></p>
      <div class="message-time">
        <i><%= message.created_at.strftime("%d/%m") %> - <%= (message.created_at + 1.hour).strftime("%H:%M")  %></i>
      </div>
    </div>
</div>
