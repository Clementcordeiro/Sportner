<div class="container">
  <h2 class="text-center m-3 sand-underline">Mes infos</h2>
   <div class="infos_profil">
    <p class="bonus_infos">Prénom<%= link_to "Modifier", edit_profile_path, class: 'text-decoration-none'%> <br> </p><%= @user.first_name%>
    <p class="bonus_infos">Nom de famille <br> </p><%= @user.last_name%>
    <p class="bonus_infos">E-MAIL <br> </p><%= @user.email%>
    <p class="bonus_infos">ADRESSE <br> </p><%= @user.address%>
    <p class="bonus_infos">DATE DE NAISSANCE <br> </p><%= @user.birthday%>
  </div>
    <h2 class="text-center m-3 sand-underline">Mes sports</h2>
   <div class="infos_profil">
    <div class="surf_profil">
    <p class="bonus_infos">Surf <br> </p>
      <% if @user.surfer == true%>
        <%= "Vous êtes un surfeur"%> <%= @user.surf_level%><br>
          <div class="text-center"><%= "XP :"%> <%= @user.surf_xp%></div>
        <% else %>
         <%= link_to "Devenez Surfeur", edit_profile_path,  class: 'btn btn-fullwide' %>
      <%end%>
    </div>
    <div class="run_profil">
    <p class="bonus_infos">Course <br> </p>
        <% if @user.runner == true%>
          <%= "Vous êtes un runnner"%> <%= @user.run_level%><br>
            <div class="text-center"> <%= "XP :"%> <%= @user.run_xp%></div>
          <% else %>
          <%= link_to "Devenez Runner", edit_profile_path,  class: 'btn btn-fullwide' %>
        <%end%>
      </div>
  </div>
</div>
