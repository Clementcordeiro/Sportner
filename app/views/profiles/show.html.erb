<div class="container">
  <h2 class="text-center m-3">Profil</h2>
   <div class="infos_profil">
   <h3 class="text-center"> <%= @user.first_name %>  <%= @user.last_name%></h3>
    <p class="bonus_infos">E-MAIL <br> </p><%= @user.email%>
    <p class="bonus_infos">ADRESSE <br> </p><%= @user.address%>
  </div>
    <h2 class="text-center m-3">Profil Sport</h2>
   <div class="surf_and_run">
    <div class="surf_profil">
    <p class="bonus_infos">Surf <br> </p>
      <% if @user.surfer == true%>
        <%= "Vous ètes un surfeur"%> <%= @user.surf_level%><br>
          <div class="text-center"><%= "XP :"%> <%= @user.surf_xp%></div>
        <% else %>
         <%= link_to "Devener Surfeur", edit_profile_path,  class: 'btn btn-fullwide' %>
      <%end%>
    </div>
    <div class="run_profil">
    <p class="bonus_infos">Course <br> </p>
        <% if @user.runner == true%>
          <%= "Vous ètes un runnner"%> <%= @user.run_level%><br>
            <div class="text-center"> <%= "XP :"%> <%= @user.run_xp%></div>
          <% else %>
          <%= link_to "Devener Runner", edit_profile_path,  class: 'btn btn-fullwide' %>
        <%end%>
      </div>
  </div>
        <%= link_to "Update votre profils sport", edit_profile_path,  class: 'btn btn-fullwide mt-4' %>
        <%= link_to "Voir les événements", events_path,  class: 'btn btn-fullwide mt-4' %>
</div>
