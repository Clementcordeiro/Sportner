<div class="bottom-bar ps-4 pe-4">
  <% if request.path == events_path %>
    <%= link_to raw("<i class='fa-solid fa-house page'></i>"), events_path%>
    <% else %>
    <%= link_to raw("<i class='fa-solid fa-house'></i>"), events_path%>
  <% end %>
  <% if request.path == my_events_path%>
     <%= link_to raw("<i class='fa-sharp fa-solid fa-calendar-check page'></i>"), my_events_path%>
     <% else %>
     <%= link_to raw("<i class='fa-sharp fa-solid fa-calendar-check'></i>"), my_events_path%>
  <% end %>
  <% if request.path == new_event_path %>
     <%= link_to raw("<i class='fa-solid fa-plus d-none'></i>"), new_event_path%>
     <% else %>
     <%= link_to raw("<i class='fa-solid fa-plus'></i>"), new_event_path%>
  <% end %>
  <% if request.path == chatrooms_path %>
     <%= link_to raw("<i class='fa-solid fa-comment page'></i>"), chatrooms_path%>
     <% else %>
     <%= link_to raw("<i class='fa-solid fa-comment'></i>"), chatrooms_path%>
  <% end %>
  <% if request.path == spots_map_path%>
     <%= link_to raw("<i class='fa-solid fa-location-dot page'></i>"), spots_map_path%>
     <% else %>
     <%= link_to raw("<i class='fa-solid fa-location-dot'></i>"), spots_map_path%>
  <% end %>
</div>
