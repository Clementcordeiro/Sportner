<div class="container text-center">
  <h2>Créer ton compte</h2>
  <div class="form_sport d-flex justify-content-around">
          <div class="my-4 d-flex flex-column">
              <label for="run">Run</label>
              <input type="checkbox" id="Run">

              <label for="Débutant">Débutant</label>
              <input type="checkbox" id="Débutant">

              <label for="Intermédiaire">Intermédiaire</label>
              <input type="checkbox" id="Intermédiaire">

              <label for="Confirmé">Confirmé</label>
              <input type="checkbox" id="Confirmé">
          </div>
            <div class="my-4 d-flex flex-column">
              <label for="surf">Surf</label>
              <input type="checkbox" id="surf">

              <label for="Débutant">Débutant</label>
              <input type="checkbox" id="Débutant">

              <label for="Intermédiaire">Intermédiaire</label>
              <input type="checkbox" id="Intermédiaire">

              <label for="Confirmé">Confirmé</label>
              <input type="checkbox" id="Confirmé">
          </div>
      </div>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
     <div class="name d-flex justify-content-between">
      <%= f.input :first_name,
                  required: true,
                  autofocus: true,
                  label: false,
                  placeholder: "Prénom",
                  input_html: { autocomplete: "first-name" }%>
      <%= f.input :last_name,
                  required: true,
                  autofocus: true,
                  label: false,
                  placeholder: "Nom",
                  input_html: { autocomplete: "last-name" }%>
      </div>
      <%= f.input :birthday,
                  required: true,
                  autofocus: true,
                  label: false,
                  placeholder: "birthday",
                  input_html: { autocomplete: "birthday" }%>
      <%= f.input :address,
                  required: true,
                  autofocus: true,
                  label: false,
                  placeholder: "Adresse",
                  input_html: { autocomplete: "address" }%>
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  label: false,
                  placeholder: "Email",
                  input_html: { autocomplete: "email" }%>
      <%= f.input :password,
                  required: true,
                  label: false,
                  placeholder: "Mot de passe",
                  hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  required: true,
                  label: false,
                  placeholder: "Confirmes ton mot de passe",
                  input_html: { autocomplete: "new-password" } %>

    </div>

    <div class="form-actions btn btn-primary">
      <%= f.button :submit, "Je crée mon compte" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>